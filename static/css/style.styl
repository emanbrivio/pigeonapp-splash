@import 'nib'
@import 'rupture'

// Color Palette
_light = #f0ecea
_accent = #fa1f3c
_white = #ffffff
_dark = #5c5049
_brown = #a7988f

// Font
.sans-font
  font-family 'Open Sans', sans-serif

// PureCSS fixes
.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .sans-font
.pure-form
  max-width 600px
  margin auto
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .sans-font
    border none
    box-shadow none
    padding 10px 0
    font-weight 400
    font-size 24px
    width 100%
    &::-webkit-input-placeholder
       color darken(_light, 10%)
       font-weight 300
    &:-moz-placeholder
       color darken(_light, 10%)
       font-weight 300
    &::-moz-placeholder
       color darken(_light, 10%)
       font-weight 300
    &:-ms-input-placeholder
       color darken(_light, 10%)
       font-weight 300
  label
    display block
    text-transform uppercase
    font-weight 400
    font-size 12px
    color _brown
    small
      font-size 1em
      text-transform none
      
    &.label-link
      font-weight 600
      text-transform none
      cursor pointer
      span,
      i
        display inline-block
        vertical-align middle
      span
        text-decoration underline
      i
        font-size 15px
        margin-right 5px
        padding-top 5px
        
      &:hover
        color _dark
  fieldset
    padding 20px
    border-radius 5px
    background #FFF
    color _dark
  button
    @extends .sans-font
    
.pure-button
  @extends .sans-font
  padding 20px 40px
  min-width 180px
  border-radius 5px
  text-transform uppercase
  font-size 12px
  font-weight 600
  letter-spacing 0.1em
  background darken(_brown, 15%)
  color #FFF
  transition background 0.4s ease
  &.pure-button-accent
    background _accent
    
  &:hover
    background darken(_brown, 25%)
    &.pure-button-accent
      background darken(_accent, 10%)

// Generic
html,
body
  width 100%
  height 100%
  @extends .sans-font
  font-size 1em
  font-weight 400

body
  overflow-y scroll

_spacer = 5, 10, 20, 40, 50, 60, 80, 100, 150
for _s in _spacer
  .spacer-{ _s }
    height ( _s * 1px )
    
h1
  font-weight 300
  font-size 2rem
h3
  font-weight 400
  font-size 1rem
  line-height 1.9em
  color _dark

a.stronglink
  color _dark
  font-weight 600
  text-decoration none
  &:hover
    text-decoration underline

.padding
  padding 0 40px

#intro
  height 100%
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  +below(480px)
    position static
    height auto

  footer
    position absolute
    bottom 0
    left 0
    right 0
    +below(480px)
      position static
      margin-top 100px

a.logo
  position relative
  z-index 10
  img
    border none
  
footer
  ul
    list-style none
    margin 30px 0 20px 0
    padding 0
    font-size 0.8rem
    color rgba(_brown, 0.7)
    font-weight 600
    li
      display inline-block
      margin 10px
    a
      color _brown
      text-decoration none
      &:hover
        color _dark

#signup
  position absolute
  top 100%
  left 0
  right 0
  +below(480px)
    position static
    top auto

#confirm
  margin-top -220px
  position relative
  +below(480px)
    margin-top -60px
  .step
    min-height 0

#activate
  .page-cloud-white
    height 150px
    background-size 100% auto
    background-position center bottom
  span.circled
    display block
    width 60px
    height 60px
    border-radius 60px
    margin auto
    border 1px solid _brown
    text-align center
    & > span
      line-height 65px
      font-size 24px
    
#footer
  background _brown

.page-cloud-brown
  background-image url('../img/clouds-brown.png')
  background-position center bottom
  background-repeat no-repeat
  height 250px
  +below(480px)
    height 100px
    background-size auto 100px

.page-cloud-white
  background-image url('../img/clouds-white.png')
  background-position right bottom
  background-repeat no-repeat
  height 300px
  +below(480px)
    height 100px
    background-size auto 100px
    background-position left bottom

.step-indicator
  height 30px
  div
    width 40px
    display inline-block
    text-align center
  span
    display inline-block
    vertical-align middle
    margin 10px 0
    font-size 14px
    padding 4px 3px 3px 3px
    color transparent
    width 2px
    height 2px
    border-radius 20px
    border 2px solid rgba(#FFF, 0.5)
    transition width 0.2s ease, height 0.2s ease, margin 0.2s ease, padding 0.2s ease, color 0.2s ease 0.2s, border 0.2s ease
    &.done
      background none
      color #FFF
      width 18px !important
      height 18px !important
      border-color transparent
      padding 0
      margin 9px 0
    &.now
      border-color #FFF
      border-width 2px
      width 8px
      height 8px
      margin 10px 0
      &.done
        background #FFF
        color _brown
        line-height 22px

.step
  display none
  opacity 0
  min-height 420px
  transform translate(30px, 0)
  //transform scale(0.9, 0.9)
  transition opacity 0.2s ease, transform 0.4s ease
  +below(480px)
    min-height 0
  :first-child
    margin-top 0
  :last-child
    margin-bottom 0
  &.current-step
    display block
  &.fade-in
    opacity 1
    transform translate(0, 0)
    //transform scale(1, 1)
  &.fade-out
    opacity 0
    transform translate(-30px, 0)
    //transform scale(0.9, 0.9)

.advanced
  display none
  &.show
    display block
    & + label.advanced-toggle
      display none

.code-form
  display none
  &.show
    display block
  input[type='text']
    padding 10px 15px
    font-size 14px
    width 180px
    display inline-block
    color _dark
    text-align center
    margin 0
  button
    padding 12px 15px
    margin-left 20px
    min-width 0

  
.page-white
  background-color _white
  color _brown
  
.page-plain-light
  background-color _light
  color _dark
  
.page-light
  background-color _light
  background-image url('../img/clouds-white.png')
  background-position center bottom
  background-repeat no-repeat
  color _dark
  +below(480px)
    background-size auto 100px
    .spacer-150
      height 75px
  
.page-brown
  background-color _brown
  color _white
  h3
    color rgba(_light, 0.7)
    strong
      color _white
  p
    color rgba(_light, 0.7)
  a
    color #FFF
    text-decoration underline
    font-weight 600


+below(480px)
  .padding
    padding 0 20px